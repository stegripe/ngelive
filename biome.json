{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "extends": ["@stegripe/biomejs-config"],
    "files": {
        "includes": ["backend/src/**/*", "frontend/src/**/*", "prisma/**/*"],
        "ignoreUnknown": true
    },
    "css": {
        "parser": {
            "cssModules": true,
            "tailwindDirectives": true
        }
    },
    "linter": {
        "rules": {
            "correctness": {
                "useExhaustiveDependencies": "warn"
            },
            "style": {
                "noRestrictedGlobals": "off",
                "useNamingConvention": "off",
                "useFilenamingConvention": "off",
                "useConsistentMemberAccessibility": "off",
                "useBlockStatements": "off"
            },
            "suspicious": {
                "noConsole": "off",
                "useAwait": "off"
            },
            "a11y": {
                "useSemanticElements": "off"
            },
            "nursery": {
                "noFloatingPromises": "off",
                "useExplicitType": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "es5"
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    }
}
