{
    "name": "ngelive",
    "version": "1.0.0",
    "description": "Live streaming management system",
    "main": "backend/src/index.ts",
    "scripts": {
        "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
        "dev:backend": "tsx watch backend/src/index.ts",
        "dev:frontend": "cd frontend && pnpm run dev",
        "lint": "pnpm exec biome check .",
        "lint:fix": "pnpm exec biome check --write .",
        "build": "concurrently \"pnpm run build:backend\" \"pnpm run build:frontend\"",
        "build:backend": "pnpm exec biome check backend && tsc --build tsconfig.json",
        "build:frontend": "pnpm exec biome check frontend && cd frontend && pnpm run build",
        "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend\"",
        "start:backend": "node backend/dist/index.js",
        "start:frontend": "cd frontend && pnpm run start",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:seed": "tsx prisma/seed.ts",
        "docker:build": "docker build -t ngelive . --no-cache",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "dependencies": {
        "@prisma/client": "^6.19.1",
        "axios": "^1.13.2",
        "bcryptjs": "^3.0.3",
        "clsx": "^2.1.1",
        "cors": "^2.8.5",
        "express": "^5.2.1",
        "express-fileupload": "^1.5.2",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "lucide-react": "^0.562.0",
        "mariadb": "^3.4.5",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "next": "^15.5.9",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "tailwind-merge": "^3.4.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.10",
        "@stegripe/biomejs-config": "^1.1.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/express-fileupload": "^1.5.1",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^22.19.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "autoprefixer": "^10.4.23",
        "concurrently": "^9.2.1",
        "postcss": "^8.5.6",
        "prisma": "^6.19.1",
        "tailwindcss": "^4.1.18",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=22.0.0",
        "pnpm": ">=10.0.0"
    },
    "packageManager": "pnpm@10.12.1"
}
