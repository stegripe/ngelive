{
    "name": "ngelive",
    "type": "module",
    "version": "1.0.0-pre",
    "description": "A modern web-based platform for managing RTMP live streams with video playlist management, user authentication, and admin controls.",
    "scripts": {
        "postinstall": "prisma generate --schema=prisma/schema.prisma",
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "biome check src",
        "lint:fix": "biome check --fix --unsafe src",
        "db:push": "prisma db push",
        "db:seed": "tsx prisma/seed.ts",
        "docker:build": "docker build -t ngelive . --no-cache",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down"
    },
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "@tanstack/react-query": "^5.90.16",
        "axios": "^1.13.2",
        "bcryptjs": "^2.4.3",
        "clsx": "^2.1.1",
        "jsonwebtoken": "^9.0.3",
        "lucide-react": "^0.562.0",
        "next": "^14.0.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sonner": "^1.7.4",
        "tailwind-merge": "^2.6.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@stegripe/biomejs-config": "^1.1.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.11.0",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "autoprefixer": "^10.4.23",
        "postcss": "^8.5.6",
        "prisma": "^5.22.0",
        "tailwindcss": "^3.4.19",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=10.0.0"
    }
}
