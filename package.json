{
    "name": "ngelive",
    "version": "1.0.0",
    "description": "Live streaming management system",
    "main": "backend/src/index.ts",
    "scripts": {
        "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
        "dev:backend": "tsx watch backend/src/index.ts",
        "dev:frontend": "cd frontend && pnpm run dev",
        "lint": "pnpm exec biome check backend frontend",
        "lint:fix": "pnpm exec biome check --fix --unsafe backend frontend",
        "build": "concurrently \"pnpm run build:backend\" \"pnpm run build:frontend\"",
        "build:backend": "pnpm exec biome check backend && tsc --build tsconfig.json",
        "build:frontend": "pnpm exec biome check frontend && cd frontend && pnpm run build",
        "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend\"",
        "start:backend": "node backend/dist/index.js",
        "start:frontend": "cd frontend && pnpm run start",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:seed": "tsx prisma/seed.ts",
        "docker:build": "docker build -t ngelive . --no-cache",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "dependencies": {
        "@prisma/client": "^5.7.1",
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "clsx": "^2.0.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.3",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "lucide-react": "^0.294.0",
        "mariadb": "^3.2.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "next": "^14.0.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^2.2.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.10",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-fileupload": "^1.4.4",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.10",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "postcss": "^8.4.32",
        "prisma": "^5.7.1",
        "tailwindcss": "^3.3.6",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.15.1"
}
